extends ../layout/inicio 

block contenido 
    div(class="py-10 mb-11")
        h1(class="text-white text-5xl font-extrabold italic text-center mb-14")=pagina

        div(class="py-10 mb-11") 
            //-Linea para imprimir datos en la pagina web -->pre=JSON.stringify(proyecto, undefined, 2)

            div(class=" text-white mx-3 carta mr-5 mb-11")
                div(class="card-body")
                    h2(class="text-center font-bold text-4xl mb-6 underline") Información sobre el proyecto
                    p(class="font-bold text-2xl text-start mb-2") - Descripción: 
                        span #{proyecto.descripcion}
                    p(class="font-bold text-2xl text-start mb-2") - Autor: #{proyecto.autor}
                    p(class="font-bold text-2xl text-start mb-2") - Tutor: #{proyecto.tutor}
                    p(class="font-bold text-2xl text-start mb-2") - Tecnología empleada: #{proyecto.tecnologia}
                    p(class="font-bold text-2xl text-start mb-2") - Tipo de proyecto: #{proyecto.tipo_proyecto}
                    p(class="font-bold text-2xl text-start mb-2") - Ciclo Formativo: #{proyecto.ciclo}
                    p(class="font-bold text-2xl text-start mb-2") - Fecha de creación: #{proyecto.createdAt}
                    p(class="font-bold text-2xl text-start mb-2") - Última modificación: #{proyecto.updatedAt}
                    
                div(class="mt-6")
                    h2(class="text-center font-bold text-4xl mb-6 underline") Archivos
                    each archivo in proyecto.archivos
                        a(href=archivo.ruta_almacenamiento, download class="flex flex-col justify-center items-center") 
                            button(class="buttonDownload gap-5") Descargar #{archivo.nombre}

                div(class="card-body")
                    h3(class="text-center font-bold text-3xl mb-6") Comenta el proyecto 
                    form(action=`/comentar-proyecto/${proyecto.id}`, method="POST")
                        input(type="hidden", name="_csrf", value=csrfToken)
                        div(class="mb-4 flex flex-row items-center justify-center")
                            textarea(name="comentario", id="comentario", class="p-2 border text-black w-1/2  border-gray-300 rounded-lg focus:outline-none focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", required)
                        div(class="mb-4 flex flex-row items-center justify-center")
                            button(class="button")
                                span(class="button_lg")
                                    span(class="button_sl")
                                    span(class="button_text") Comentar
