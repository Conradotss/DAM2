            form(action="/auth/cerrar-sesion" method="POST" class="") 
                input(type="hidden", name="_csrf", value=csrfToken)  
                input(type="submit" value="Cerrar Sesión" class="btn btn-nuetral hover:drop-shadow-[0_1px_60px_rgba(251,251,251,1)]")    
    