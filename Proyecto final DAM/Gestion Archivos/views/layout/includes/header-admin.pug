                ul(tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-zinc-900 rounded-box w-52")
                    div(class="join join-vertical")
                        button(class="btn join-item hover:bg-base-200") 
                            a(href="#") Mi Perfil
